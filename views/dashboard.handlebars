<div class="container" id="header-box">
    <h1>Admin Dashboard</h1>
</div>
<div class="container" id="main-box">
    <div class="container columns main-column">
        <h3>Challenge List</h3>
        {{!--// display the challenges--}}
        {{#if challenges}}
            {{#each challenge}}
                <a href="">{{challenge.title}}</a>
            {{/each}}
        {{else}}
            <h2>there are no challenges available</h2>
        {{/if}}
        <br><br>
    </div>

    <div class="container columns side-column">
        <h3>Edit Challenge</h3>
        {{#if challengeSelected}}
            <form class="edit-challenge">
            <!-- this gets populated by the frontend function editChallengeData -->
            </form>
        {{else}}
            <p>You must select a challenge from the Challenge List to edit a challenge.</p>
        {{/if}}
    </div>
</div>
