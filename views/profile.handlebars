<div class="container" id="header-box">
    <h1>User Profile</h1>
  </div>
  <div class="container" id="main-box">
    <div class="container columns main-column">
        {{#if user}}
            <h2>{{user.displayName}}</h2>
            <form method="POST" action="/user/update">
                <div class="profileSection" id="emailAddress">
                     <button class="smallButton">Edit</button> 
                     email address: 
                    {{user.email}} 
                    <input class="profileEdit" name="emailAddress" type="text" size="20" value="Email Address" />
                </div>
                <div class="profileSection" id="firstName">
                     <button class="smallButton">Edit</button> 
                     First Name: 
                    {{user.firstName}}
                    <input class="profileEdit" name="firstName" type="text" size="20" value="First Name" />
                </div>
                <div class="profileSection" id="lastName">
                    <button class="smallButton">Edit</button> 
                    Last Name: 
                    {{user.lastName}} 
                    <input class="profileEdit" name="lastName" type="text" size="20" value="Last Name" />
                </div>
                <input class="smallButton" type="submit">
            </form>
        {{else}}
            <h2>Please Login</h2>
            <p>
                Back to the <a href="/login">login page</a> to sign in or sign up.
            </p>
        {{/if}}
        <br><br>
    </div>

    <div class="container columns side-column">
        <h3>Your Challenge History</h3>
        {{#if user}}
            <ul class="challenge-history">
            <!-- this gets populated by the frontend function showChallengeHistory --> 
            </ul>
        {{else}}
            <p>You must <a href="/login">login</a> to see your profile information.</p>
        {{/if}}
    </div>
  </div>
  <div class="dataHolder" data-displayname="{{user.displayName}}" data-userid="{{user.id}}"></div>
  <script src="/js/profile.js" type="text/javascript"></script>



