<div class="login-page">
<div class="container" id="login-box">
	<div id="logo">Let's Hack!<div id="icon"></div></div>
	<div class="columns main-column">

		{{#if user}}
			<h2>Welcome back, {{user.displayName}}</h2>
			<p>You're currently logged in. Done hacking for now? <a href="/logout">Log out</a>.</p>
				<p>To keep hacking, head over 
				to the lobby. <a class="largeButton" href="/lobby">Hack On</a></p>
		{{else}}
			<h2>Sign Up</h2>
			<p>
				<form method="POST" action="/user/create">
					Choose a Username:<br>
					<input type="text" name="username"><br>
					Your Email:<br>
					<input type="text" name="email"><br>
					First Name:<br>
					<input type="text" name="firstName"><br>
					Last Name:<br>
					<input type="text" name="lastName"><br>
					Choose a Password:<br>
					<input type="password" name="password"><br>
					Confirm Password:
					<input type="password" name="passwordConfirm"><br>
					<input type="submit" class="smallButton" value="Sign Up"/>
				</form>
			</p>
		</div>
		<div class="columns side-column">
			<h2>Log In</h2>
			<p>
				<form method="POST" action="/login">
					Username:<br>
					<input type="text" name="username"><br>
					Password:<br>
					<input type="password" name="password"><br>
					<input type="submit" class="smallButton" value="Log In"/>
				</form>
			</p>

		{{/if}}
		{{#if message}}
			<h4>{{message}}</h4>
		{{/if}}
	</div>
</div>
</div>
<div class="dataHolder" data-displayname="{{user.displayName}}" data-userid="{{user.id}}"></div>
